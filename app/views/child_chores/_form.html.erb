<%= simple_form_for(@child_chore, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

	<%= f.input :description, as: :text, input_html: {rows: "3", cols: "2"} %>
	<%= f.input :reward_points %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
